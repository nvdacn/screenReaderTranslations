msgstr "T: ترجمة النص المظلل,"

#. type: Bullet: '* '
msgid "Shift+t: translate text from the Clipboard,"
msgstr "Shift+t: ترجمة النص من الحافظة,"

#. type: Bullet: '* '
msgid "S: swap source and target languages,"
msgstr "S: تبديل بين لغتي المصدر والهدف,"

#. type: Bullet: '* '
msgid "A: announce current configuration,"
msgstr "a: الإعلان عن الإعداد الحالي,"

#. type: Bullet: '* '
msgid "C: copy last result to clipboard,"
msgstr "S: نسخ آخر نتيجة للحافظة,"

#. type: Bullet: '* '
msgid "I: identify the language of selected text,"
msgstr "I: التعرف على لغة النص المظلل,"

#. type: Bullet: '* '
msgid "H: announces all available commands to user."
msgstr "H: الإعلان عن كافة أوامر الإضافة للمستخدم."

